.show__image
  %p.image
    - if item.images.empty?
      = image_tag "/images/noimage.png", width:"200",height: "200" 
    - else
      - item.images.first(1).each do |image|
        = image_tag image.image.thumb.url, alt: "商品画像です"
  %p.name
    【担当者】
    = link_to user_path(item.user_id) do
      = item.user.username
  %p
    【ジャンル】
    = item.category
  %p
    【商品名】
    = item.name
  %p
    【上代】
    = converting_to_jpy(item.price) 
  %p
    【下代】
    = converting_to_jpy(item.budget) 
  %p
    【取り扱い色】
    = item.color
  %p
    【放映日】
    = item.on_air.strftime("%Y年 %m月 %d日")
  .show__image__edit
    - if user_signed_in? && current_user.id == item.user_id
      %h4
        = link_to edit_item_path(item) do
          =  icon "fa","edit",class:"edi"
      %h4
        = link_to item_path(item),method: :delete do
          = icon "fa","trash-alt",class:"delete"