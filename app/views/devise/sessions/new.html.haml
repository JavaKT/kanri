.login
  .login__text
    %h2 ログイン画面
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label "メールアドレス"
        %br/
        = f.email_field :email, autofocus: true,placeholder:"メールアドレスを入力してください", autocomplete: "email"
        = flash[:alert]
      .field
        = f.label "パスワード"
        %br/
        = f.password_field :password, autocomplete: "current-password",placeholder:"パスワードを入力して下さい"
        = flash[:alert]
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label "記憶させますか？"
      .actions
        = f.submit "ログインする" ,class:"login_button"
      .test_account
        %h1
        ↓テストアカウント↓
        %h1
        メールアドレス: test@gmail.com
        %h1
        パスワード: testaccount
    .links
      = render "devise/shared/links"
