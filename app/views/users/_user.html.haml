.show_user__sidebar__image
  - if user.image.file.nil?
    = link_to image_tag "/images/unknown.png",size: '300x300',class:"profimage"
  - else
    = image_tag user.image.url,size: '300x300',class:"profimage"
.show_user__sidebar__info
  %p.username
    = user.username
    
  %table 
    %tr
      %td 所属部署:
      %td.value
        = user.department
    %tr
      %td 役職:
      %td.value
        = user.post
    %tr
      %td 連絡先:
      %td.value
        = user.contact
    %tr
      %td 内線番号:
      %td.value
        = user.number
    %tr
      %td 入社日:
      %td.value
        = user.start_day.strftime("%Y年 %m月 %d日")

  .show_user__sidebar__info__text
    %p.self 自己紹介
    %p.info
      = user.introduction