.items
  = form_with url: search_3_categories_path, local: true ,method: :get, class: "items__search" do |f| 
    = f.text_field :keyword ,placeholder:"商品名を入力して下さい",id:"keyword"
    = f.submit '検索する'
    .items__search__result
      - @items.each do |item| 
        .items__search__result__info
          .items__search__result__info__image
            = link_to item_path(item) do
              %p.image
                - if item.image.file.nil?
                  = image_tag "/uploads/noimage.png", width:"200",height: "200" 
                - else
                  = image_tag item.image.thumb.url, alt: "商品画像です"
          .items__search__result__info__text
            %p.name
              【担当者】
              = item.user.username
            %p
              【商品名】
              = item.name
            %p
              【放映日】
              = item.on_air.strftime("%Y年 %m月 %d日")
          